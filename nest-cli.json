{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {"include": "**/**", "outDir": "dist/src", "watchAssets": true}
    ]
  }
}
